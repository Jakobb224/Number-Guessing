<?xml version='1.0' encoding='UTF-8'?>
<!-- Created with Cambalache 0.96.3 -->
<interface>
  <!-- interface-name window.ui -->
  <requires lib="Adw" version="1.0"/>
  <requires lib="gtk" version="4.0"/>
  <requires lib="gio" version="2.0"/>
  <requires lib="libadwaita" version="1.7"/>
  <template class="GuesanumberWindow" parent="AdwApplicationWindow">
    <property name="content">
      <object class="AdwToolbarView">
        <child type="top">
          <object class="AdwHeaderBar">
            <child type="end">
              <object class="GtkMenuButton">
                <property name="icon-name">open-menu-symbolic</property>
                <property name="menu-model">primary_menu</property>
                <property name="primary">True</property>
              </object>
            </child>
            <child type="start">
              <object class="GtkButton" id="stats_button">
                <property name="tooltip-text">Show Statistics</property>
                <child>
                  <object class="GtkBox">
                    <property name="spacing">6</property>
                    <child>
                      <object class="GtkImage">
                        <property name="icon-name">daytime-sunrise-symbolic</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkLabel" id="score_label">
                        <property name="label">0</property>
                        <style>
                          <class name="numeric"/>
                          <class name="badge"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>
                <style>
                  <class name="flat"/>
                </style>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwClamp">
            <property name="maximum-size">400</property>
            <child>
              <object class="GtkBox">
                <property name="margin-bottom">12</property>
                <property name="margin-end">12</property>
                <property name="margin-start">12</property>
                <property name="orientation">vertical</property>
                <property name="spacing">24</property>
                <child>
                  <object class="AdwStatusPage" id="status_page">
                    <property name="description">Pick a number between 1 and 10</property>
                    <property name="icon-name">input-gaming-symbolic</property>
                    <property name="title">Good Luck!</property>
                  </object>
                </child>
                <child>
                  <object class="GtkListBox">
                    <property name="selection-mode">none</property>
                    <child>
                      <object class="AdwActionRow">
                        <property name="title">Your Input</property>
                        <child>
                          <object class="GtkSpinButton" id="guess_spin_button">
                            <property name="adjustment">
                              <object class="GtkAdjustment">
                                <property name="lower">1</property>
                                <property name="step-increment">1</property>
                                <property name="upper">10</property>
                                <property name="value">1</property>
                              </object>
                            </property>
                            <property name="numeric">True</property>
                            <property name="valign">center</property>
                          </object>
                        </child>
                      </object>
                    </child>
                    <style>
                      <class name="boxed-list"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkBox">
                    <property name="homogeneous">True</property>
                    <property name="spacing">12</property>
                    <child>
                      <object class="GtkButton" id="guess_button">
                        <property name="label">Submit</property>
                        <style>
                          <class name="suggested-action"/>
                          <class name="pill"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="GtkButton" id="reset_button">
                        <property name="label">New Game</property>
                        <property name="visible">False</property>
                        <style>
                          <class name="pill"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </property>
    <property name="default-height">514</property>
    <property name="default-width">360</property>
    <property name="resizable">False</property>
    <property name="title">Number Guessing</property>
  </template>
  <menu id="primary_menu">
    <section>
      <item>
        <attribute name="action">app.about</attribute>
        <attribute name="label">_About Number Guessing</attribute>
      </item>
    </section>
  </menu>
</interface>
